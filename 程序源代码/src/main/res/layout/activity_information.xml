<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information"
    android:background="@color/personal_info_background"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/themecolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="5sp"
            android:text="个人信息"
            android:textColor="@color/personal_info_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/change_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="6sp"
            android:paddingRight="12sp"
            android:text="更改"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <ImageView
            android:id="@+id/info_touxiang"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/touxiang1"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"

        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:text="性别"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp" />
        <EditText
            android:id="@+id/info_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:background="@null"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜爱的书"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_favourite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"

        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:background="@null"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/info_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:hint="填写公司，发现同事"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/info_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:hint="填写学校，发现校友"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/info_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:padding="12dp"/>
        <EditText
            android:id="@+id/info_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:hint="你的邮箱"

            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/personal_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人说明"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/info_beizhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:textColor="@color/personal_info_text"
            android:textSize="13sp"

            android:hint="让别人更了解你"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>